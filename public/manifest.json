{
  "manifest_version": 3,
  "name": "Audio Recorder",
  "version": "1.0",
  "description": "Record browser audio and save as .wav or .mp3.",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}